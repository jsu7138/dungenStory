<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/skin_background"
    tools:context="com.dgstory.dungeonstory.StageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_stageselect"/>
        <ImageView
            android:id="@+id/stage_cancle"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_cancel"
            android:layout_marginLeft="200dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/stage_scroll"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/skin_difficulty"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/stage_easy"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/icon_stagefirst"
                    android:alpha="0.7"
                    android:layout_marginLeft="20dp"/>
                <ImageView
                    android:id="@+id/stage_normal"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/icon_stagesecond"
                    android:alpha="0.7"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"/>
                <ImageView
                    android:id="@+id/stage_hard"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/icon_stagethird"
                    android:alpha="0.7"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="20dp"/>
                <ImageView
                    android:id="@+id/stage_veryhard"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/icon_stagefourth"
                    android:alpha="0.7"
                    android:layout_marginLeft="22dp"/>
            </LinearLayout>
        </ScrollView>
        <ScrollView
            android:id="@+id/stage_scroll2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/skin_stagepaper"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/floor1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/icon_cave"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/floor2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/icon_cave"
                        android:visibility="invisible"/>
                    <ImageView
                        android:id="@+id/floor3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/icon_cave"
                        android:visibility="invisible"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/floor4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:visibility="invisible"/>
                    <ImageView
                        android:id="@+id/floor5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/icon_cave"
                        android:visibility="invisible"/>
                    <ImageView
                        android:id="@+id/floor6"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:visibility="invisible"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/floor7"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/icon_cave"
                        android:visibility="invisible"/>
                    <ImageView
                        android:id="@+id/floor8"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/icon_cave"
                        android:visibility="invisible"/>
                    <ImageView
                        android:id="@+id/floor9"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/icon_cave"
                        android:visibility="invisible"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        />
                    <ImageView
                        android:id="@+id/floor10"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/icon_cave"
                        android:visibility="invisible"/>
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</LinearLayout>
