<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/skin_dialog1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/askagain_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="던전에 입장하시겠습니까?"
            android:textColor="#ffffff"
            android:textSize="10pt"/>
        <TextView
            android:id="@+id/askagain_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* sp가 소모됩니다"
            android:textColor="#ffffff"
            android:textSize="6pt"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/askagain_ok"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/btn_ok" />

        <ImageView
            android:id="@+id/askagain_cancle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/btn_cancel" />
    </LinearLayout>


</LinearLayout>
